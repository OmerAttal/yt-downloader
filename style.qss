*{
    background-color:rgb(0, 0, 0);
}

QPushButton {
   
    padding: 5px ;
    border-radius: 10px;
    background-color:rgb(234, 179, 179);
    color: black;
}

QPushButton:focus{
    border: 2px solid rgb(215, 127, 127);
}

QLineEdit {
    padding: 5px ;
    border-radius: 10px;
    background-color: #e0f7fa ;
}

QLineEdit:focus{
    background-color: #e0f7fa; /* Mavi-yeşil bir renk */
    border: 2px solid #00bcd4;  /* Sınır rengini değiştir */
}